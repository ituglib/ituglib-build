                    sh 'findcall_floss'
                }
            }
        }
        stage('test-ssl1.0') {
            steps {
                withEnv(['PATH=/usr/coreutils/bin:/usr/local/bin:/usr/bin:/bin:/usr/ucb',
                        '_RLD_LIB_PATH=/usr/local/lib:/usr/local/lib']) {
