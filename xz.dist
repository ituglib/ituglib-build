test -z "${VERSION_PATH}" && \
	export VERSION=`${WORKSPACE}/xz --version | fgrep 'xz (XZ Utils)' | \
		sed '1,$s/xz (XZ Utils) \([^ ]*\).*$/\1/'` \
 || \
	export VERSION=`${VERSION_PATH} --version | fgrep 'xz (XZ Utils)' | \
		sed '1,$s/xz (XZ Utils) \([^ ]*\).*$/\1/'`
echo "Packaging xz version ${VERSION}"

